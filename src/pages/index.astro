<script>
  import cardsDataImport from '../data/osho_cards.json';
  
  // Les cartes sont disponibles immédiatement
  const cardsData: any[] = cardsDataImport as any[];

  const drawBtn = document.getElementById("drawCardBtn") as HTMLButtonElement;
  const revealOverlay = document.getElementById("cardRevealOverlay");
  const revealContent = document.getElementById("revealContent");
  const closeReveal = document.getElementById("closeReveal");

  if (drawBtn && revealOverlay && revealContent && closeReveal) {
    drawBtn.addEventListener("click", async () => {
      if (cardsData.length === 0) {
        console.error("Les cartes ne sont pas encore chargées");
        return;
      }

      // Désactiver le bouton pendant l'animation
      drawBtn.disabled = true;
      
      // Créer l'overlay d'animation de tirage
      const drawOverlay = document.createElement('div');
      drawOverlay.className = 'draw-animation-overlay';
      document.body.appendChild(drawOverlay);

      // Créer la carte animée
      const animatedCard = document.createElement('div');
      animatedCard.className = 'animated-card';
      animatedCard.innerHTML = '<div class="animated-card-back"></div>';
      drawOverlay.appendChild(animatedCard);

      // Activer l'overlay
      await new Promise(resolve => setTimeout(resolve, 50));
      drawOverlay.classList.add('active');

      // Tirer une carte au hasard
      const randomCard = cardsData[Math.floor(Math.random() * cardsData.length)];
      
      // Effet de mélange
      const cardStack = document.getElementById('cardStack');
      if (cardStack) {
        cardStack.classList.add('shuffling');
      }

      await new Promise(resolve => setTimeout(resolve, 400));
      animatedCard.classList.add('reveal');
      await new Promise(resolve => setTimeout(resolve, 800));

      if (cardStack) {
        cardStack.classList.remove('shuffling');
      }

      // Retirer l'overlay de tirage
      drawOverlay.classList.remove('active');
      await new Promise(resolve => setTimeout(resolve, 300));
      drawOverlay.remove();

      // === CINEMATIC REVEAL SEQUENCE ===
      // Activer l'overlay de révélation
      revealOverlay.classList.add('active');

      // Étape 1: Nom de la carte avec starfield (0-3000ms)
      const cinematicName = document.createElement('div');
      cinematicName.className = 'card-name-cinematic';
      
      // Créer le starfield
      let starfieldHTML = '<div class="name-starfield">';
      for (let i = 0; i < 50; i++) {
        const x = Math.random() * 100;
        const y = Math.random() * 100;
        const delay = Math.random() * 3;
        starfieldHTML += `<div class="star" style="left: ${x}%; top: ${y}%; animation-delay: ${delay}s;"></div>`;
      }
      starfieldHTML += '</div>';
      
      // Ajouter les anneaux de glow
      const rings = '<div class="name-glow-ring"></div><div class="name-glow-ring" style="animation-delay: 0.3s;"></div><div class="name-glow-ring" style="animation-delay: 0.6s;"></div>';
      
      cinematicName.innerHTML = `
        ${starfieldHTML}
        ${rings}
        <h2 class="card-name-big">${randomCard.name}</h2>
      `;
      revealOverlay.appendChild(cinematicName);

      // Attendre que le nom disparaisse (3000ms)
      await new Promise(resolve => setTimeout(resolve, 3200));
      cinematicName.remove();

      // Déterminer l'icône de famille
      const arcanaIcons: Record<string, string> = {
        'Feu': '🔥',
        'Eau': '💧',
        'Nuages': '☁️',
        'Arc-en-ciel': '🌈',
        'Majeure': '⭐'
      };
      
      const familyKey = randomCard.arcana.includes('Feu') ? 'Feu' :
                       randomCard.arcana.includes('Eau') ? 'Eau' :
                       randomCard.arcana.includes('Nuages') ? 'Nuages' :
                       randomCard.arcana.includes('Arc-en-ciel') ? 'Arc-en-ciel' :
                       'Majeure';
      const arcanaIcon = arcanaIcons[familyKey] || '✦';

      // Construire le contenu complet avec TOUS les paragraphes
      const commentaryParagraphs = randomCard.commentary.split('\n\n').filter((p: string) => p.trim().length > 0);
      const fullCommentary = commentaryParagraphs.map((p: string) => `<p style="margin-bottom: 1rem; text-align: justify;">${p}</p>`).join('');

      revealContent.innerHTML = `
        <div class="card-gift-box" style="max-width: 800px; margin: 0 auto; padding: 3rem 2rem; background: rgba(20, 25, 35, 0.92); backdrop-filter: blur(20px) saturate(1.2); -webkit-backdrop-filter: blur(20px) saturate(1.2); border: 1px solid rgba(78, 205, 196, 0.3); border-radius: 24px; box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3), 0 0 80px rgba(78, 205, 196, 0.15);">
          
          <!-- Card Image - Top Center -->
          <div class="gift-card-image-container" style="max-width: 350px; margin: 0 auto 2rem; text-align: center;">
            <div style="position: relative; width: 100%; aspect-ratio: 2/3;">
              <!-- Image Placeholder with Loader -->
              <div class="image-placeholder" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: rgba(78, 205, 196, 0.05); border: 2px dashed rgba(78, 205, 196, 0.2); border-radius: 16px; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                <!-- Animated Loader -->
                <div class="card-loader" style="width: 80px; height: 80px; position: relative;">
                  <div class="loader-ring" style="position: absolute; width: 100%; height: 100%; border: 3px solid transparent; border-top-color: #4ecdc4; border-radius: 50%; animation: spin 1.5s cubic-bezier(0.68, -0.55, 0.265, 1.55) infinite;"></div>
                  <div class="loader-ring" style="position: absolute; width: 100%; height: 100%; border: 3px solid transparent; border-top-color: #ff8c42; border-radius: 50%; animation: spin 2s cubic-bezier(0.68, -0.55, 0.265, 1.55) infinite reverse; animation-delay: 0.3s;"></div>
                  <div class="loader-ring" style="position: absolute; width: 100%; height: 100%; border: 3px solid transparent; border-top-color: #ee5a6f; border-radius: 50%; animation: spin 2.5s cubic-bezier(0.68, -0.55, 0.265, 1.55) infinite; animation-delay: 0.6s;"></div>
                  <div class="loader-center" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); font-size: 2rem; animation: pulse 2s ease-in-out infinite;">✦</div>
                </div>
              </div>
              <!-- Actual Image (hidden until loaded) -->
              <img 
                src="${randomCard.image_url_online}" 
                alt="${randomCard.name}"
                class="gift-card-image"
                style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; border-radius: 16px; box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5), 0 0 40px rgba(78, 205, 196, 0.2); opacity: 0; transition: opacity 0.5s ease-in-out;"
                onload="this.style.opacity='1'; this.parentElement.querySelector('.image-placeholder').style.display='none';"
              />
            </div>
          </div>
          
          <!-- Card Header - Name + Arcana -->
          <div class="gift-card-header" style="text-align: center; margin-bottom: 1.5rem;">
            <h2 class="gift-card-name" style="font-family: 'Cinzel Decorative', serif; font-size: clamp(2rem, 8vw, 3.5rem); font-weight: 700; text-transform: uppercase; letter-spacing: 0.1em; margin: 0 0 1rem; background: linear-gradient(135deg, #4ecdc4 0%, #ff8c42 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">${randomCard.name}</h2>
            <div class="gift-card-arcana-row" style="display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.5rem 1rem; background: rgba(78, 205, 196, 0.15); border: 1px solid rgba(78, 205, 196, 0.3); border-radius: 50px; font-size: 0.875rem; color: #4ecdc4;">
              <span class="arcana-icon" style="font-size: 1.25rem;">${arcanaIcon}</span>
              <span class="gift-card-arcana">${randomCard.arcana}</span>
            </div>
          </div>

          <!-- Decorative Divider -->
          <div class="gift-divider" style="position: relative; text-align: center; margin: 2rem 0; height: 1px; background: linear-gradient(90deg, transparent, rgba(78, 205, 196, 0.3) 30%, rgba(78, 205, 196, 0.3) 70%, transparent);">
            <span class="divider-ornament" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); padding: 0 1rem; background: rgba(20, 25, 35, 0.92); font-size: 1.5rem; color: rgba(78, 205, 196, 0.5);">✦</span>
          </div>

          <!-- Main Meaning Section -->
          <section class="gift-section meaning-section" style="margin-bottom: 2rem;">
            <h3 class="gift-section-title" style="font-family: 'Cinzel Decorative', serif; font-size: 1.5rem; font-weight: 600; text-align: center; margin-bottom: 1rem; color: #4ecdc4; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
              <span class="material-symbols-outlined" style="font-size: 1.5rem;">auto_stories</span>
              Signification
            </h3>
            <div class="gift-main-text" style="font-family: 'Crimson Pro', serif; font-size: 1.125rem; line-height: 1.8; color: rgba(255, 255, 255, 0.95); padding: 1.5rem; background: rgba(78, 205, 196, 0.05); border-left: 3px solid rgba(78, 205, 196, 0.4); border-radius: 8px; position: relative;">
              <span style="position: absolute; top: 0.5rem; left: 0.5rem; font-size: 3rem; color: rgba(78, 205, 196, 0.2); font-family: Georgia, serif; line-height: 1;">"</span>
              <div style="position: relative; z-index: 1;">${randomCard.main_text}</div>
            </div>
          </section>

          <!-- Commentary Section -->
          <section class="gift-section commentary-section" style="margin-bottom: 2rem;">
            <h3 class="gift-section-title" style="font-family: 'Cinzel Decorative', serif; font-size: 1.5rem; font-weight: 600; text-align: center; margin-bottom: 1rem; color: #ff8c42; display: flex; align-items: center; justify-content: center; gap: 0.5rem;">
              <span class="material-symbols-outlined" style="font-size: 1.5rem;">chat_bubble</span>
              Commentaire
            </h3>
            <div class="gift-commentary" style="font-family: 'Crimson Pro', serif; font-size: 1rem; line-height: 1.8; color: rgba(255, 255, 255, 0.85);">
              ${fullCommentary}
            </div>
          </section>

          <!-- Closing -->
          <div class="gift-closing" style="text-align: center; margin-top: 3rem; padding-top: 2rem; border-top: 1px solid rgba(255, 255, 255, 0.1);">
            <div class="closing-ornament" style="font-size: 1.25rem; color: #4ecdc4; opacity: 0.6; letter-spacing: 1rem;">✦ ✦ ✦</div>
          </div>
        </div>
      `;

      // Ajouter des particules mystiques colorées
      const giftBox = revealContent.querySelector('.card-gift-box');
      if (giftBox) {
        const particleColors = [
          'rgba(78, 205, 196, 0.9)',
          'rgba(255, 140, 66, 0.9)',
          'rgba(238, 90, 111, 0.9)',
          'rgba(192, 108, 132, 0.9)'
        ];
        
        for (let i = 0; i < 16; i++) {
          const particle = document.createElement('div');
          particle.className = 'light-particle';
          particle.style.left = `${Math.random() * 100}%`;
          particle.style.top = `${Math.random() * 100}%`;
          particle.style.setProperty('--particle-x', `${(Math.random() - 0.5) * 200}px`);
          particle.style.setProperty('--particle-y', `${-120 - Math.random() * 180}px`);
          particle.style.animationDelay = `${Math.random() * 4}s`;
          particle.style.background = `radial-gradient(circle, ${particleColors[i % particleColors.length]}, transparent)`;
          giftBox.appendChild(particle);
        }
      }

      // Réactiver le bouton après toute l'animation (6 secondes)
      setTimeout(() => {
        drawBtn.disabled = false;
      }, 6000);
    });

    // Fermer l'overlay
    closeReveal.addEventListener("click", () => {
      revealOverlay.classList.remove('active');
      drawBtn.disabled = false;
    });

    // Fermer avec Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && revealOverlay.classList.contains('active')) {
        revealOverlay.classList.remove('active');
        drawBtn.disabled = false;
      }
    });

    // Fermer en cliquant sur le fond
    revealOverlay.addEventListener('click', (e) => {
      if (e.target === revealOverlay) {
        revealOverlay.classList.remove('active');
        drawBtn.disabled = false;
      }
    });
  }

  // Parallax scroll effect
  let ticking = false;
  const heroSection = document.querySelector('.hero-section') as HTMLElement;
  const heroLeft = document.querySelector('.hero-left') as HTMLElement;
  const heroRight = document.querySelector('.hero-right') as HTMLElement;

  function updateParallax() {
    const scrolled = window.pageYOffset;
    const heroHeight = heroSection ? heroSection.offsetHeight : 0;
    
    if (scrolled < heroHeight) {
      const parallaxSpeed = 0.5;
      const parallaxSpeedFast = 0.3;
      
      if (heroSection) {
        const before = heroSection.querySelector('::before') as HTMLElement;
        const after = heroSection.querySelector('::after') as HTMLElement;
        
        // Move background layers at different speeds
        heroSection.style.setProperty('--parallax-offset-before', `${scrolled * parallaxSpeed}px`);
        heroSection.style.setProperty('--parallax-offset-after', `${scrolled * parallaxSpeedFast}px`);
      }
      
      // Move content layers
      if (heroLeft) {
        heroLeft.style.transform = `translateY(${scrolled * 0.4}px)`;
        heroLeft.style.opacity = `${1 - scrolled / heroHeight}`;
      }
      
      if (heroRight) {
        heroRight.style.transform = `translateY(${scrolled * 0.2}px)`;
        heroRight.style.opacity = `${1 - scrolled / heroHeight}`;
      }
    }
    
    ticking = false;
  }

  function requestParallaxUpdate() {
    if (!ticking && window.matchMedia('(prefers-reduced-motion: no-preference)').matches) {
      window.requestAnimationFrame(updateParallax);
      ticking = true;
    }
  }

  window.addEventListener('scroll', requestParallaxUpdate);
</script>
