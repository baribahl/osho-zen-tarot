    animation: pulseGlow 2s ease-in-out infinite;
  }

  @keyframes pulseGlow {
    0%, 100% {
      border-color: rgba(255, 140, 66, 0.3);
      box-shadow: 0 0 10px rgba(255, 140, 66, 0.2);
    }
    50% {
      border-color: rgba(255, 140, 66, 0.6);
      box-shadow: 0 0 20px rgba(255, 140, 66, 0.4);
    }
  }

  /* Animation de mélange pour la pile */
  .card-stack.shuffling .stack-card {
    animation: shuffle 0.4s ease-in-out;
  }

  .card-stack.shuffling .stack-card:nth-child(1) {
    animation-delay: 0s;
  }

  .card-stack.shuffling .stack-card:nth-child(2) {
    animation-delay: 0.1s;
  }

  .card-stack.shuffling .stack-card:nth-child(3) {
    animation-delay: 0.2s;
  }

  @keyframes shuffle {
    0%, 100% {
      transform: 
        translateX(calc(var(--card-index) * 12px))
        translateY(calc(var(--card-index) * -8px))
        rotateZ(calc(var(--card-index) * 3deg));
    }
    25% {
      transform: 
        translateX(calc(var(--card-index) * 20px))
        translateY(calc(var(--card-index) * -15px))
        rotateZ(calc(var(--card-index) * 8deg));
    }
    50% {
      transform: 
        translateX(calc(var(--card-index) * 5px))
        translateY(calc(var(--card-index) * -12px))
        rotateZ(calc(var(--card-index) * -5deg));
    }
    75% {
      transform: 
        translateX(calc(var(--card-index) * 15px))
        translateY(calc(var(--card-index) * -10px))
        rotateZ(calc(var(--card-index) * 6deg));
    }
  }

  /* Désactiver l'animation si prefers-reduced-motion */
  @media (prefers-reduced-motion: reduce) {
    .animated-card,
    .card-stack.shuffling .stack-card {
      animation: none !important;
      transition: none !important;
    }

    .draw-animation-overlay.active {
      transition: opacity 0.1s ease;
    }
  }

  /* Floating mystical particles */
  .light-particle {
    position: absolute;
    width: 6px;
    height: 6px;
    background: radial-gradient(circle, rgba(78, 205, 196, 0.9), rgba(255, 140, 66, 0.5), transparent);
    border-radius: 50%;
    pointer-events: none;
    filter: blur(1px);
    animation: floatParticle 8s ease-in-out infinite;
  }

  @keyframes floatParticle {
    0%, 100% {
      transform: translate(0, 0) scale(1);
      opacity: 0;
    }
    5% {
      opacity: 0.8;
    }
    95% {
      opacity: 0.8;
    }
    100% {
      transform: translate(var(--particle-x, 50px), var(--particle-y, -100px)) scale(0.5);
      opacity: 0;
