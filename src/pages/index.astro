---
import BaseLayout from "../layouts/BaseLayout.astro";

// Les cartes seront chargées côté client
---

<BaseLayout title="Barib''s Osho Zen Tarot - Tirer une carte">
  <div class="hero-section" role="region" aria-label="Tirage de carte">
    <div class="hero-container">
      <div class="hero-left">
        <h1 class="hero-title">Tirer une carte</h1>
        <p class="hero-subtitle">
          Une invitation à la contemplation et à l''introspection.
          Laissez l''instant présent vous guider vers une carte qui résonne avec votre être.
        </p>
        <button class="draw-button" id="drawCardBtn" aria-label="Tirer une carte du tarot Zen d'Osho">
          <span class="button-text">Tirer une carte</span>
          <span class="button-glow" aria-hidden="true"></span>
        </button>
      </div>

      <div class="hero-right">
        <div class="card-stack" id="cardStack" role="img" aria-label="Pile de cartes de tarot">
          <div class="stack-card" style="--card-index: 0">
            <div class="card-back"></div>
          </div>
          <div class="stack-card" style="--card-index: 1">
            <div class="card-back"></div>
          </div>
          <div class="stack-card" style="--card-index: 2">
            <div class="card-back"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Overlay for drawn card reveal -->
  <div class="card-reveal-overlay" id="cardRevealOverlay" role="dialog" aria-modal="true" aria-label="Carte révélée">
    <button class="close-reveal" id="closeReveal" aria-label="Fermer la carte">
      <span class="material-symbols-outlined">close</span>
    </button>
    <div class="reveal-content" id="revealContent">
      <!-- Contenu injecté dynamiquement -->
    </div>
  </div>
</BaseLayout>

<style is:global>
  /* Global styles for dynamically created elements */
  .card-name-cinematic,
  .card-name-big,
  .name-starfield,
  .star,
  .name-glow-ring,
  .card-gift-box,
  .gift-glow,
  .gift-inner,
  .gift-card-wrapper,
  .gift-card-frame,
  .card-corner,
  .gift-card-image,
  .gift-card-header,
  .gift-card-name,
  .gift-card-arcana-row,
  .arcana-icon,
  .gift-card-arcana,
  .gift-divider,
  .gift-content,
  .gift-section,
  .gift-section-title,
  .gift-main-text,
  .gift-commentary,
  .gift-closing,
  .gift-closing-text,
  .gift-closing-icon,
  .light-particle,
  .image-placeholder,
  .card-loader,
  .loader-ring,
  .loader-center {
    /* Styles will be applied below */
  }

  /* Loader animations */
  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 0.4;
      transform: translate(-50%, -50%) scale(0.9);
    }
    50% {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1.1);
      color: #4ecdc4;
    }
  }
</style>

<style>
  .hero-section {
    min-height: 80vh;
    display: flex;
    align-items: center;
    padding: var(--space-3xl) var(--space-xl);
    position: relative;
    overflow: hidden;
  }

  /* === Parallax background layers === */
  .hero-section::before {
    content: '';
    position: absolute;
    top: -10%;
    left: -10%;
    width: 120%;
    height: 120%;
    background: radial-gradient(
      ellipse at 30% 40%,
      rgba(255, 140, 66, 0.15) 0%,
      transparent 50%
    );
    z-index: 0;
    pointer-events: none;
    will-change: transform;
    transform: translateY(var(--parallax-offset-before, 0));
    transition: transform 0.1s ease-out;
  }

  .hero-section::after {
    content: '';
    position: absolute;
    top: -10%;
    right: -10%;
    width: 120%;
    height: 120%;
    background: radial-gradient(
      ellipse at 70% 60%,
      rgba(78, 205, 196, 0.12) 0%,
      transparent 50%
    );
    z-index: 0;
    pointer-events: none;
    will-change: transform;
    transform: translateY(var(--parallax-offset-after, 0));
    transition: transform 0.1s ease-out;
  }

  .hero-container {
    max-width: var(--breakpoint-xl);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .hero-left {
    display: flex;
    flex-direction: column;
    gap: var(--space-xl);
    will-change: transform;
  }

  .hero-title {
    font-size: var(--text-5xl);
    font-family: var(--font-heading);
    font-weight: 900;
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    line-height: 1.7;
    max-width: 500px;
  }

  .draw-button {
    position: relative;
    padding: var(--space-lg) var(--space-2xl);
    font-size: var(--text-xl);
    font-family: var(--font-heading);
    font-weight: 700;
    color: var(--color-text-primary);
    background: linear-gradient(135deg, rgba(255, 107, 107, 0.2), rgba(238, 90, 111, 0.2));
    border: 2px solid var(--color-accent-magenta);
    border-radius: 8px;
    cursor: pointer;
    transition: all var(--transition-normal);
    overflow: hidden;
    width: fit-content;
  }

  .draw-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--glow-magenta), var(--card-shadow-lg);
    border-color: var(--color-accent-orange);
  }

  .draw-button:active {
    transform: translateY(0);
  }

  .button-glow {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, transparent, rgba(255, 140, 66, 0.3), transparent);
    opacity: 0;
    transition: opacity var(--transition-normal);
  }

  .draw-button:hover .button-glow {
    opacity: 1;
  }

  .hero-right {
    display: flex;
    justify-content: center;
    align-items: center;
    perspective: 1000px;
    will-change: transform;
  }

  .card-stack {
    position: relative;
    width: 280px;
    height: 400px;
  }

  .stack-card {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: var(--card-border-radius);
    transform: 
      translateX(calc(var(--card-index) * 12px))
      translateY(calc(var(--card-index) * -8px))
      rotateZ(calc(var(--card-index) * 3deg));
    transition: transform var(--transition-slow);
  }

  .card-back {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #2a2a4e 0%, #1a1a3e 100%);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: var(--card-border-radius);
    box-shadow: var(--card-shadow-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .card-back::before {
    content: "";
    position: absolute;
    inset: 20px;
    border: 2px solid rgba(255, 140, 66, 0.3);
    border-radius: 8px;
  }

  .card-back::after {
    content: "";
    font-size: 4rem;
    color: rgba(255, 140, 66, 0.4);
  }

  /* === CARD REVEAL OVERLAY === */
  .card-reveal-overlay {
    position: fixed;
    inset: 0;
    z-index: 1000;
    background: rgba(10, 15, 25, 0.75);
    backdrop-filter: blur(30px) saturate(1.2);
    -webkit-backdrop-filter: blur(30px) saturate(1.2);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-xl);
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.6s ease;
  }

  .card-reveal-overlay.active {
    opacity: 1;
    pointer-events: all;
  }

  .close-reveal {
    position: absolute;
    top: var(--space-xl);
    right: var(--space-xl);
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-primary);
    cursor: pointer;
    transition: all var(--transition-normal);
    z-index: 10;
  }

  .close-reveal:hover {
    background: rgba(255, 140, 66, 0.2);
    border-color: var(--color-accent-orange);
    transform: rotate(90deg);
  }

  .close-reveal .material-symbols-outlined {
    font-size: 1.5rem;
  }

  .reveal-content {
    max-width: 900px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    scrollbar-width: thin;
    scrollbar-color: rgba(78, 205, 196, 0.5) rgba(255, 255, 255, 0.1);
  }

  .reveal-content::-webkit-scrollbar {
    width: 8px;
  }

  .reveal-content::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
  }

  .reveal-content::-webkit-scrollbar-thumb {
    background: rgba(78, 205, 196, 0.5);
    border-radius: 4px;
    transition: background var(--transition-normal);
  }

  .reveal-content::-webkit-scrollbar-thumb:hover {
    background: rgba(78, 205, 196, 0.7);
  }

  /* === CINEMATIC CARD NAME REVEAL === */
  .card-name-cinematic {
    position: fixed;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 6;
    opacity: 0;
    animation: nameAppear 3s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    background: radial-gradient(ellipse at center, rgba(15, 23, 37, 0.95), rgba(10, 10, 20, 0.98));
  }

  @keyframes nameAppear {
    0% {
      opacity: 0;
    }
    5% {
      opacity: 1;
    }
    15% {
      opacity: 1;
    }
    85% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }

  /* Starfield background for name reveal */
  .name-starfield {
    position: absolute;
    inset: 0;
    overflow: hidden;
    opacity: 0.4;
  }

  .star {
    position: absolute;
    width: 2px;
    height: 2px;
    background: white;
    border-radius: 50%;
    animation: starTwinkle 3s ease-in-out infinite;
  }

  @keyframes starTwinkle {
    0%, 100% {
      opacity: 0.2;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.5);
    }
  }

  .card-name-big {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 12vw, 7rem);
    font-weight: 900;
    text-align: center;
    background: linear-gradient(135deg, 
      var(--color-accent-orange), 
      var(--color-accent-magenta), 
      var(--color-accent-turquoise),
      var(--color-accent-orange)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    background-size: 200% 200%;
    letter-spacing: 4px;
    padding: 0 var(--space-2xl);
    position: relative;
    z-index: 2;
    text-transform: uppercase;
    animation: 
      nameScale 3s cubic-bezier(0.16, 1, 0.3, 1) forwards,
      nameGradient 3s ease infinite;
    filter: drop-shadow(0 0 40px rgba(255, 140, 66, 0.6))
            drop-shadow(0 0 80px rgba(78, 205, 196, 0.4));
  }

  @keyframes nameScale {
    0% {
      transform: scale(0.5);
      filter: blur(30px);
      opacity: 0;
    }
    15% {
      transform: scale(1);
      filter: blur(0);
      opacity: 1;
    }
    85% {
      transform: scale(1);
      filter: blur(0);
      opacity: 1;
    }
    100% {
      transform: scale(0.3);
      filter: blur(20px);
      opacity: 0;
    }
  }

  @keyframes nameGradient {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  /* Concentric glow rings */
  .name-glow-ring {
    position: absolute;
    inset: 50%;
    transform: translate(-50%, -50%);
    border: 2px solid rgba(78, 205, 196, 0.3);
    border-radius: 50%;
    animation: ringExpand 3s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes ringExpand {
    0% {
      width: 0;
      height: 0;
      opacity: 0;
    }
    20% {
      opacity: 1;
    }
    100% {
      width: 150vmax;
      height: 150vmax;
      opacity: 0;
    }
  }

  /* === THE GIFT BOX - Main Card Container === */
  .card-gift-box {
    background: linear-gradient(135deg, rgba(26, 26, 62, 0.90), rgba(15, 52, 67, 0.85));
    backdrop-filter: blur(20px) saturate(1.2);
    -webkit-backdrop-filter: blur(20px) saturate(1.2);
    border: 2px solid rgba(78, 205, 196, 0.3);
    border-radius: 24px;
    padding: var(--space-3xl) var(--space-2xl);
    max-width: 800px;
    margin: 0 auto;
    position: relative;
    overflow: hidden;
    box-shadow: 
      0 40px 100px rgba(0, 0, 0, 0.7),
      0 0 120px rgba(78, 205, 196, 0.2),
      inset 0 2px 0 rgba(255, 255, 255, 0.1);
  }

  @keyframes giftBoxReveal {
    0% {
      opacity: 0;
      transform: scale(0.85) translateY(50px);
      filter: blur(20px);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateY(0);
      filter: blur(0);
    }
  }

  /* Animated gradient border */
  .card-gift-box::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 24px;
    padding: 2px;
    background: linear-gradient(135deg, 
      var(--color-accent-turquoise),
      var(--color-accent-magenta),
      var(--color-accent-orange),
      var(--color-accent-turquoise)
    );
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    animation: borderRotate 4s linear infinite;
    opacity: 0.6;
  }

  @keyframes borderRotate {
    0% {
      filter: hue-rotate(0deg);
    }
    100% {
      filter: hue-rotate(360deg);
    }
  }

  /* Decorative corners */
  .card-gift-box::after {
    content: '';
    position: absolute;
    inset: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    pointer-events: none;
  }

  /* Ethereal glow layers */
  .gift-glow {
    position: absolute;
    width: 300px;
    height: 300px;
    border-radius: 50%;
    pointer-events: none;
    animation: glowPulse 4s ease-in-out infinite;
  }

  .gift-glow:nth-child(1) {
    top: -150px;
    left: -150px;
    background: radial-gradient(circle, rgba(78, 205, 196, 0.2), transparent 70%);
  }

  .gift-glow:nth-child(2) {
    bottom: -150px;
    right: -150px;
    background: radial-gradient(circle, rgba(255, 140, 66, 0.2), transparent 70%);
    animation-delay: 2s;
  }

  @keyframes glowPulse {
    0%, 100% {
      opacity: 0.4;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.2);
    }
  }

  /* === Card Image Container === */
  .gift-card-image-container {
    width: 100%;
    max-width: 350px;
    margin: 0 auto var(--space-2xl);
    position: relative;
  }

  .gift-card-image {
    width: 100%;
    height: auto;
    border-radius: 16px;
    box-shadow: 
      0 20px 60px rgba(0, 0, 0, 0.8),
      0 0 80px rgba(78, 205, 196, 0.3);
    display: block;
    border: 3px solid rgba(255, 255, 255, 0.2);
  }

  /* Sacred geometry corners - all four */
  .gift-card-frame {
    position: relative;
  }

  .card-corner {
    position: absolute;
    width: 50px;
    height: 50px;
    border: 2px solid rgba(255, 140, 66, 0.5);
    pointer-events: none;
    opacity: 0;
    animation: cornerReveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  .card-corner.top-left {
    top: -16px;
    left: -16px;
    border-right: none;
    border-bottom: none;
    border-top-left-radius: 12px;
    animation-delay: 4.2s;
  }

  .card-corner.top-right {
    top: -16px;
    right: -16px;
    border-left: none;
    border-bottom: none;
    border-top-right-radius: 12px;
    animation-delay: 4.3s;
  }

  .card-corner.bottom-left {
    bottom: -16px;
    left: -16px;
    border-right: none;
    border-top: none;
    border-bottom-left-radius: 12px;
    animation-delay: 4.4s;
  }

  .card-corner.bottom-right {
    bottom: -16px;
    right: -16px;
    border-left: none;
    border-top: none;
    border-bottom-right-radius: 12px;
    animation-delay: 4.5s;
  }

  @keyframes cornerReveal {
    0% {
      opacity: 0;
      transform: scale(0.5);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* === Card Header === */
  .gift-card-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .gift-card-name {
    font-family: var(--font-card-name);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    background: linear-gradient(135deg, var(--color-accent-orange), var(--color-accent-magenta));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0 0 var(--space-lg) 0;
    letter-spacing: 1px;
    line-height: 1.1;
    text-transform: uppercase;
  }

  .gift-card-arcana-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
    padding: var(--space-md) var(--space-xl);
    background: rgba(78, 205, 196, 0.1);
    border-radius: 100px;
    display: inline-flex;
  }

  .arcana-icon {
    font-size: 1.75rem;
    filter: drop-shadow(0 2px 8px rgba(0, 0, 0, 0.4));
  }

  .gift-card-arcana {
    font-family: var(--font-heading);
    font-size: var(--text-sm);
    color: var(--color-accent-turquoise);
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 700;
  }

  .gift-divider {
    text-align: center;
    margin: var(--space-2xl) 0;
    position: relative;
  }

  .gift-divider::before,
  .gift-divider::after {
    content: '';
    position: absolute;
    top: 50%;
    width: 35%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(78, 205, 196, 0.5), transparent);
  }

  .gift-divider::before {
    left: 0;
  }

  .gift-divider::after {
    right: 0;
  }

  .divider-ornament {
    display: inline-block;
    color: var(--color-accent-turquoise);
    font-size: var(--text-xl);
    position: relative;
    z-index: 1;
  }

  /* === Content Sections === */
  .gift-section {
    margin-bottom: var(--space-3xl);
  }

  .gift-section:last-of-type {
    margin-bottom: var(--space-2xl);
  }

  .gift-section-title {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-accent-orange);
    margin-bottom: var(--space-xl);
    text-transform: uppercase;
    letter-spacing: 2px;
    text-align: center;
  }

  .gift-section-title .material-symbols-outlined {
    font-size: 1.5rem;
    color: var(--color-accent-turquoise);
  }

  .gift-main-text {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    line-height: 1.9;
    color: var(--color-text-primary);
    font-weight: 500;
    padding: var(--space-xl);
    background: rgba(78, 205, 196, 0.08);
    border: 1px solid rgba(78, 205, 196, 0.2);
    border-radius: 12px;
    position: relative;
    text-align: justify;
  }

  .gift-main-text::before {
    content: '"';
    position: absolute;
    top: -10px;
    left: 10px;
    font-size: 4rem;
    color: rgba(78, 205, 196, 0.3);
    font-family: Georgia, serif;
    line-height: 1;
  }

  .gift-commentary {
    font-family: var(--font-body);
    font-size: var(--text-base);
    line-height: 1.9;
    color: var(--color-text-secondary);
  }

  .gift-commentary p {
    margin-bottom: var(--space-lg);
    text-align: justify;
  }

  .gift-commentary p:last-child {
    margin-bottom: 0;
  }

  /* === Closing Section === */
  .gift-closing {
    text-align: center;
    margin-top: var(--space-3xl);
    padding-top: var(--space-2xl);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .closing-ornament {
    font-size: var(--text-xl);
    color: var(--color-accent-turquoise);
    margin-bottom: var(--space-md);
    opacity: 0.6;
    letter-spacing: var(--space-md);
  }

  .gift-closing-text {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-style: italic;
    color: var(--color-text-muted);
    margin: 0;
  }

  /* === Animation de tirage === */
  .draw-animation-overlay {
    position: fixed;
    inset: 0;
    background: rgba(10, 10, 20, 0);
    backdrop-filter: blur(0px);
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    pointer-events: none;
    transition: all 0.3s ease;
  }

  .draw-animation-overlay.active {
    opacity: 1;
    background: rgba(10, 10, 20, 0.85);
    backdrop-filter: blur(8px);
    pointer-events: all;
  }

  .animated-card {
    width: 280px;
    height: 400px;
    position: relative;
    transform: translateY(100vh) rotateY(0deg);
    transition: transform 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .draw-animation-overlay.active .animated-card {
    transform: translateY(0) rotateY(0deg);
  }

  .animated-card.reveal {
    animation: cardReveal 0.8s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards;
  }

  @keyframes cardReveal {
    0% {
      transform: translateY(0) rotateY(0deg) scale(1);
    }
    50% {
      transform: translateY(-30px) rotateY(90deg) scale(1.1);
    }
    100% {
      transform: translateY(0) rotateY(180deg) scale(1);
      opacity: 0;
    }
  }

  .animated-card-back {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #2a2a4e 0%, #1a1a3e 100%);
