---
import BaseLayout from '../../layouts/BaseLayout.astro';
import cardsData from '../../data/osho_cards.json';
import Markdown from '../../components/Markdown.astro';

export async function getStaticPaths() {
  return cardsData.map((card) => ({
    params: { id: card.card_number },
    props: { card }
  }));
}

const { card } = Astro.props;
const currentIndex = cardsData.findIndex((c) => c.card_number === card.card_number);
const previousCard = currentIndex > 0 ? cardsData[currentIndex - 1] : cardsData[cardsData.length - 1];
const nextCard = currentIndex < cardsData.length - 1 ? cardsData[currentIndex + 1] : cardsData[0];

// Emoji par famille
const familyEmoji: Record<string, string> = {
  'Feu': 'üî•',
  'Eau': 'üíß',
  'Nuages': '‚òÅÔ∏è',
  'Arc-en-ciel': 'üåà',
  'Majeures': '‚ú®'
};
const emoji = familyEmoji[card.arcana_family || 'Majeures'] || '';
---

<BaseLayout 
  title={`${card.name} - BaribOsho v1`}
  description={card.commentary}
>
  <div class="card-detail-page" data-family={card.arcana_family || 'Majeures'}>
    <!-- Breadcrumb navigation -->
    <nav class="breadcrumb" aria-label="Fil d'Ariane">
      <a href="/" class="breadcrumb-link">
        <span class="material-symbols-outlined">home</span>
        Accueil
      </a>
      <span class="breadcrumb-separator">‚Ä∫</span>
      <a href="/cartes" class="breadcrumb-link">
        <span class="material-symbols-outlined">grid_view</span>
        Toutes les cartes
      </a>
      <span class="breadcrumb-separator">‚Ä∫</span>
      <span class="breadcrumb-current">{card.name}</span>
    </nav>

    <!-- Mobile Back Button -->
    <a href="/cartes" class="mobile-back-button" aria-label="Retour √† la galerie">
      <span class="material-symbols-outlined">arrow_back</span>
    </a>

    <div class="detail-container">
      <!-- Image de la carte -->
      <aside class="card-image-section" role="complementary" aria-label="Image de la carte">
        <div class="card-image-frame">
          <div class="image-skeleton"></div>
          <img 
            src={card.image_url_full || card.image_url_online} 
            alt={card.name}
            class="detail-card-image"
            onload="this.classList.add('loaded'); this.previousElementSibling.style.display='none';"
          />
        </div>
      </aside>

      <!-- Contenu textuel -->
      <section class="card-content-section">
        <header class="card-header">
          <p class="card-arcana-detail">{card.arcana} {emoji}</p>
          <h1 class="card-title-large">{card.name}</h1>
        </header>

        <section class="text-section" aria-labelledby="meaning-heading">
          <h2 class="section-heading" id="meaning-heading">
            <span class="material-symbols-outlined" aria-hidden="true">auto_stories</span>
            Signification
          </h2>
          <div class="text-content-wrapper">
            <Markdown content={card.main_text} class="text-content" />
          </div>
        </section>

        <section class="text-section commentary-section" aria-labelledby="commentary-heading">
          <h2 class="section-heading" id="commentary-heading">
            <span class="material-symbols-outlined" aria-hidden="true">chat_bubble</span>
            Commentaire
          </h2>
          <div class="text-content-wrapper">
            <Markdown content={card.commentary} class="text-content commentary-text" />
          </div>
        </section>

        <!-- Navigation entre cartes -->
        <nav class="card-navigation" aria-label="Navigation entre les cartes">
          <a href={`/carte/${previousCard.card_number}`} class="nav-button prev-button">
            <span class="material-symbols-outlined">arrow_back</span>
            <div class="nav-button-content">
              <span class="nav-label">Pr√©c√©dent</span>
              <span class="nav-card-name">{previousCard.name}</span>
            </div>
          </a>

          <a href="/cartes" class="nav-button gallery-button">
            <span class="material-symbols-outlined">grid_view</span>
            <span class="nav-label">Galerie</span>
          </a>

          <a href={`/carte/${nextCard.card_number}`} class="nav-button next-button">
            <div class="nav-button-content">
              <span class="nav-label">Suivant</span>
              <span class="nav-card-name">{nextCard.name}</span>
            </div>
            <span class="material-symbols-outlined">arrow_forward</span>
          </a>
        </nav>
      </section>
    </div>
  </div>
</BaseLayout>

<style>
  /* Family-specific accent colors */
  .card-detail-page[data-family="Majeures"] { --family-color: #FFD700; --family-glow: rgba(255, 215, 0, 0.25); }
  .card-detail-page[data-family="Feu"] { --family-color: #FF6432; --family-glow: rgba(255, 100, 50, 0.2); }
  .card-detail-page[data-family="Eau"] { --family-color: #4ECDC4; --family-glow: rgba(78, 205, 196, 0.2); }
  .card-detail-page[data-family="Nuages"] { --family-color: #B4A0DC; --family-glow: rgba(180, 160, 220, 0.2); }
  .card-detail-page[data-family="Arc-en-ciel"] { --family-color: #FF8C42; --family-glow: rgba(255, 140, 66, 0.2); }

  .card-detail-page {
    min-height: 100vh;
    /* Mobile: No padding to allow full-width hero image */
    padding: 0; 
  }

  /* === Breadcrumb === */
  .breadcrumb {
    position: absolute;
    top: calc(70px + var(--space-sm));
    left: var(--space-lg);
    z-index: 20;
    display: none;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--text-base);
    color: rgba(255, 255, 255, 0.9);
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(8px);
    padding: var(--space-sm) var(--space-md);
    border-radius: 100px;
  }

  .mobile-back-button {
    position: absolute;
    top: calc(60px + var(--space-md));
    left: var(--space-md);
    z-index: 20;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(8px);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    text-decoration: none;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all var(--transition-normal);
  }

  .mobile-back-button:active {
    transform: scale(0.95);
    background: rgba(0, 0, 0, 0.5);
  }

  .breadcrumb-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    transition: color var(--transition-normal);
  }

  .breadcrumb-link:hover {
    color: var(--color-accent-orange);
  }

  .breadcrumb-link .material-symbols-outlined {
    font-size: var(--text-base);
  }

  .breadcrumb-separator {
    color: rgba(255, 255, 255, 0.5);
  }

  .breadcrumb-current {
    color: var(--color-accent-turquoise);
    font-weight: 600;
  }

  /* === Layout principal === */
  .detail-container {
    display: grid;
    grid-template-columns: 1fr; /* Mobile default */
    min-height: 100vh;
  }

  /* === Section image (Mobile Hero / Desktop Sticky) === */
  .card-image-section {
    position: relative;
    width: 100%;
    height: 50vh; /* Mobile hero height */
    display: flex;
    align-items: center;
    justify-content: center;
    background: radial-gradient(circle at center, color-mix(in srgb, var(--family-color, #4ECDC4) 15%, #2a2a4e) 0%, #0f1725 100%);
    overflow: hidden;
  }

  .card-image-frame {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Blurred background effect for mobile hero */
  .card-image-frame::before {
    content: "";
    position: absolute;
    inset: 0;
    background-image: var(--bg-image);
    background-size: cover;
    background-position: center;
    filter: blur(20px) brightness(0.4);
    transform: scale(1.1);
  }

  .detail-card-image {
    position: relative;
    height: 85%;
    width: auto;
    max-width: 90%;
    object-fit: contain;
    border-radius: 16px;
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.5);
    z-index: 2;
    transition: transform var(--transition-normal);
  }

  .card-arcana-detail {
    font-size: var(--text-sm);
    color: var(--color-accent-orange);
    text-transform: uppercase;
    letter-spacing: 2px;
    margin: 0 0 var(--space-sm) 0;
  }

  /* === Section contenu (Sheet) === */
  .card-content-section {
    position: relative;
    z-index: 10;
    background: var(--color-bg-dark);
    margin-top: -40px; /* Overlap effect */
    border-radius: 32px 32px 0 0;
    padding: var(--space-xl) var(--space-lg);
    box-shadow: 0 -10px 30px rgba(0, 0, 0, 0.5);
    display: flex;
    flex-direction: column;
    gap: var(--space-2xl);
    min-height: 60vh; /* Ensure it covers enough space */
  }

  /* Add a subtle top handle for the "sheet" look */
  .card-content-section::after {
    content: '';
    position: absolute;
    top: 12px;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 4px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 2px;
  }

  .card-header {
    text-align: center;
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .card-title-large {
    font-family: var(--font-card-name);
    font-size: var(--text-4xl);
    font-weight: 700;
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0;
    line-height: 1.1;
  }

  /* === Sections de texte === */
  .text-section {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .section-heading {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-accent-turquoise);
    margin: 0;
  }

  .text-content-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    max-width: 62ch; /* Optimal reading width */
  }

  .text-content {
    font-family: 'Crimson Pro', serif; /* Explicit serif */
    font-size: clamp(1.35rem, 1.2rem + 1vw, 1.8rem); /* Direct large size */
    line-height: 1.85;
    color: var(--color-text-secondary);
    margin: 0;
    font-weight: 400;
  }

  .text-content::first-letter {
    font-size: 3.5em;
    float: left;
    line-height: 0.8;
    margin-right: 0.1em;
    color: var(--color-accent-orange);
    font-family: var(--font-heading);
  }

  .commentary-section {
    background: var(--family-glow, rgba(78, 205, 196, 0.03));
    border-left: 4px solid var(--family-color, var(--color-accent-turquoise));
    padding: var(--space-xl);
    border-radius: 0 16px 16px 0;
  }

  .commentary-text {
    font-style: italic;
    color: var(--color-text-primary);
  }
  
  .commentary-text::first-letter {
    font-size: inherit;
    float: none;
    color: inherit;
    font-family: inherit;
  }

  /* === Navigation === */
  .card-navigation {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-md);
    margin-top: var(--space-xl);
  }

  .nav-button {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    text-decoration: none;
    transition: all var(--transition-normal);
    justify-content: center;
  }

  .nav-button:hover {
    background: rgba(255, 140, 66, 0.1);
    border-color: var(--color-accent-orange);
    transform: translateY(-2px);
  }

  .gallery-button {
    grid-column: 1 / -1;
    order: 3;
    background: transparent;
    border-style: dashed;
  }

  .nav-label {
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--color-text-muted);
  }

  .nav-card-name {
    display: none; /* Hidden on mobile */
  }

  /* === DESKTOP (Split View) === */
  @media (min-width: 1024px) {
    .card-detail-page {
      padding: 0;
      padding-top: 80px; /* Header height */
      max-width: 1600px;
      margin: 0 auto;
    }

    .breadcrumb {
      display: flex;
      position: fixed;
      top: 90px;
      left: var(--space-3xl);
      background: rgba(0,0,0,0.5);
      backdrop-filter: blur(10px);
      padding: var(--space-sm) var(--space-lg);
      font-size: var(--text-base);
    }

    .mobile-back-button {
      display: none; /* Hide on desktop */
    }

    .detail-container {
      grid-template-columns: 45% 55%;
      align-items: start;
      padding: var(--space-3xl) var(--space-2xl);
      padding-left: clamp(var(--space-2xl), 5vw, 4rem);
      padding-right: clamp(var(--space-2xl), 5vw, 4rem);
      gap: var(--space-3xl);
    }

    /* Sticky Image Section */
    .card-image-section {
      position: sticky;
      top: 120px;
      height: calc(100vh - 160px);
      background: none;
      border-radius: 24px;
      overflow: visible;
    }

    .card-image-frame::before {
      display: none; /* No blur bg on desktop */
    }

    .detail-card-image {
      height: auto;
      max-height: 100%;
      width: auto;
      max-width: 100%;
      box-shadow: 
        0 30px 60px rgba(0, 0, 0, 0.4),
        0 0 80px var(--family-glow, rgba(78, 205, 196, 0.15));
    }

    .card-arcana-detail {
      font-size: var(--text-base);
      letter-spacing: 2px;
    }

    /* Content Section */
    .card-content-section {
      margin-top: 0;
      background: none;
      box-shadow: none;
      padding: 0;
      padding-bottom: var(--space-3xl);
      border-radius: 0;
      min-height: auto;
    }

    .card-content-section::after {
      display: none;
    }

    .card-header {
      text-align: left;
      border-bottom: none;
      padding-bottom: 0;
    }

    .card-title-large {
      font-size: var(--text-6xl);
    }

    .card-navigation {
      grid-template-columns: auto 1fr auto;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      padding-top: var(--space-xl);
    }

    .gallery-button {
      grid-column: auto;
      order: 0;
      width: fit-content;
      margin: 0 auto;
    }

    .nav-button {
      justify-content: flex-start;
      padding: var(--space-md) var(--space-xl);
    }

    .next-button {
      justify-content: flex-end;
      text-align: right;
    }

    .nav-card-name {
      display: block;
      font-family: var(--font-card-name);
      font-size: var(--text-lg);
      color: var(--color-text-primary);
    }
    
    .nav-button-content {
      display: flex;
      flex-direction: column;
    }
    
    /* Desktop text improvements */
    .text-content {
      font-size: clamp(1.5rem, 1.3rem + 1.2vw, 2.2rem); /* Direct large desktop size */
    }
  }
</style>
</BaseLayout>
