---
import BaseLayout from '../../layouts/BaseLayout.astro';
import cardsData from '../../data/osho_cards.json';

export async function getStaticPaths() {
  return cardsData.map((card) => ({
    params: { id: card.card_number },
    props: { card }
  }));
}

const { card } = Astro.props;
const currentIndex = cardsData.findIndex((c) => c.card_number === card.card_number);
const previousCard = currentIndex > 0 ? cardsData[currentIndex - 1] : cardsData[cardsData.length - 1];
const nextCard = currentIndex < cardsData.length - 1 ? cardsData[currentIndex + 1] : cardsData[0];
---

<BaseLayout 
  title={`${card.name} - Barib's Osho Zen Tarot`}
  description={card.commentary}
>
  <div class="card-detail-page">
    <!-- Breadcrumb navigation -->
    <nav class="breadcrumb" aria-label="Fil d'Ariane">
      <a href="/" class="breadcrumb-link">
        <span class="material-symbols-outlined">home</span>
        Accueil
      </a>
      <span class="breadcrumb-separator">›</span>
      <a href="/cartes" class="breadcrumb-link">
        <span class="material-symbols-outlined">grid_view</span>
        Toutes les cartes
      </a>
      <span class="breadcrumb-separator">›</span>
      <span class="breadcrumb-current">{card.name}</span>
    </nav>

    <div class="detail-container">
      <!-- Image de la carte -->
      <aside class="card-image-section" role="complementary" aria-label="Image de la carte">
        <div class="card-image-frame">
          <img 
            src={card.image_url_online} 
            alt={card.name}
            class="detail-card-image"
          />
        </div>
        <div class="card-meta">
          <p class="card-arcana-detail">{card.arcana}</p>
          {card.arcana_family && (
            <p class="card-family">
              <span class="material-symbols-outlined">style</span>
              Famille: {card.arcana_family}
            </p>
          )}
        </div>
      </aside>

      <!-- Contenu textuel -->
      <main class="card-content-section">
        <header class="card-header">
          <h1 class="card-title-large">{card.name}</h1>
        </header>

        <section class="text-section" aria-labelledby="meaning-heading">
          <h2 class="section-heading" id="meaning-heading">
            <span class="material-symbols-outlined" aria-hidden="true">auto_stories</span>
            Signification
          </h2>
          <p class="text-content">{card.main_text}</p>
        </section>

        <section class="text-section commentary-section" aria-labelledby="commentary-heading">
          <h2 class="section-heading" id="commentary-heading">
            <span class="material-symbols-outlined" aria-hidden="true">chat_bubble</span>
            Commentaire
          </h2>
          <p class="text-content commentary-text">{card.commentary}</p>
        </section>

        <!-- Navigation entre cartes -->
        <nav class="card-navigation" aria-label="Navigation entre les cartes">
          <a href={`/carte/${previousCard.card_number}`} class="nav-button prev-button">
            <span class="material-symbols-outlined">arrow_back</span>
            <div class="nav-button-content">
              <span class="nav-label">Précédent</span>
              <span class="nav-card-name">{previousCard.name}</span>
            </div>
          </a>

          <a href="/cartes" class="nav-button gallery-button">
            <span class="material-symbols-outlined">grid_view</span>
            <span class="nav-label">Galerie</span>
          </a>

          <a href={`/carte/${nextCard.card_number}`} class="nav-button next-button">
            <div class="nav-button-content">
              <span class="nav-label">Suivant</span>
              <span class="nav-card-name">{nextCard.name}</span>
            </div>
            <span class="material-symbols-outlined">arrow_forward</span>
          </a>
        </nav>
      </main>
    </div>
  </div>
</BaseLayout>

<style>
  .card-detail-page {
    min-height: 100vh;
    padding: var(--space-xl);
    padding-top: calc(var(--space-2xl) + 60px);
  }

  /* === Breadcrumb === */
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    max-width: var(--breakpoint-xl);
    margin: 0 auto var(--space-2xl);
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .breadcrumb-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color var(--transition-normal);
  }

  .breadcrumb-link:hover {
    color: var(--color-accent-orange);
  }

  .breadcrumb-link .material-symbols-outlined {
    font-size: 1rem;
  }

  .breadcrumb-separator {
    color: var(--color-text-muted);
  }

  .breadcrumb-current {
    color: var(--color-accent-turquoise);
  }

  /* === Layout principal === */
  .detail-container {
    max-width: var(--breakpoint-xl);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 400px 1fr;
    gap: var(--space-3xl);
    align-items: start;
  }

  /* === Section image === */
  .card-image-section {
    position: sticky;
    top: calc(var(--space-2xl) + 60px);
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .card-image-frame {
    background: rgba(15, 23, 37, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: var(--space-lg);
    backdrop-filter: blur(10px);
  }

  .detail-card-image {
    width: 100%;
    height: auto;
    aspect-ratio: 2/3;
    object-fit: cover;
    border-radius: 12px;
    box-shadow: var(--card-shadow-lg);
    transition: all var(--transition-normal);
  }

  .card-image-frame:hover .detail-card-image {
    box-shadow: var(--card-shadow-lg), var(--glow-orange);
  }

  .card-meta {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .card-arcana-detail {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 1px;
    text-align: center;
  }

  .card-family {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    background: rgba(255, 255, 255, 0.05);
    padding: var(--space-sm) var(--space-md);
    border-radius: 8px;
    justify-content: center;
  }

  .card-family .material-symbols-outlined {
    font-size: 1rem;
  }

  /* === Section contenu === */
  .card-content-section {
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
  }

  .card-header {
    border-bottom: 2px solid rgba(255, 140, 66, 0.3);
    padding-bottom: var(--space-lg);
  }

  .card-title-large {
    font-family: var(--font-card-name);
    font-size: var(--text-5xl);
    font-weight: 700;
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0;
    line-height: 1.2;
  }

  /* === Sections de texte === */
  .text-section {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .section-heading {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-heading);
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-accent-turquoise);
    margin: 0;
  }

  .section-heading .material-symbols-outlined {
    font-size: 1.5rem;
  }

  .text-content {
    font-size: var(--text-lg);
    line-height: 1.9;
    color: var(--color-text-secondary);
    margin: 0;
  }

  .commentary-section {
    background: rgba(78, 205, 196, 0.05);
    border-left: 3px solid var(--color-accent-turquoise);
    padding: var(--space-xl);
    border-radius: 8px;
  }

  .commentary-text {
    font-style: italic;
    color: var(--color-text-primary);
  }

  /* === Navigation entre cartes === */
  .card-navigation {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: var(--space-md);
    margin-top: var(--space-2xl);
    padding-top: var(--space-2xl);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .nav-button {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    background: rgba(15, 23, 37, 0.5);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    text-decoration: none;
    transition: all var(--transition-normal);
    backdrop-filter: blur(10px);
  }

  .nav-button:hover {
    background: rgba(255, 140, 66, 0.1);
    border-color: var(--color-accent-orange);
    transform: translateY(-2px);
    box-shadow: var(--glow-orange);
  }

  .nav-button .material-symbols-outlined {
    font-size: 1.5rem;
    color: var(--color-accent-orange);
    transition: transform var(--transition-normal);
  }

  .prev-button:hover .material-symbols-outlined {
    transform: translateX(-4px);
  }

  .next-button {
    justify-content: flex-end;
  }

  .next-button:hover .material-symbols-outlined {
    transform: translateX(4px);
  }

  .gallery-button {
    justify-content: center;
  }

  .nav-button-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .nav-label {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .nav-card-name {
    font-family: var(--font-card-name);
    font-size: var(--text-base);
    color: var(--color-text-primary);
    font-weight: 600;
  }

  /* === Responsive === */
  @media (max-width: 1024px) {
    .detail-container {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }

    .card-image-section {
      position: static;
      max-width: 400px;
      margin: 0 auto;
    }
  }

  @media (max-width: 1024px) {
    .card-detail-page {
      padding: var(--space-md);
      padding-top: calc(var(--space-lg) + 60px);
    }

    .breadcrumb {
      font-size: var(--text-xs);
      gap: var(--space-xs);
      flex-wrap: wrap;
      margin-bottom: var(--space-xl);
    }

    .breadcrumb-link .material-symbols-outlined {
      font-size: 0.9rem;
    }

    .detail-container {
      gap: var(--space-lg);
    }

    .card-image-section {
      max-width: 300px;
    }

    .card-title-large {
      font-size: var(--text-2xl);
    }

    .section-heading {
      font-size: var(--text-lg);
    }

    .text-content {
      font-size: var(--text-sm);
    }

    .card-navigation {
      grid-template-columns: 1fr;
      gap: var(--space-sm);
    }

    .nav-button {
      width: 100%;
      justify-content: center;
      padding: var(--space-md);
    }

    .prev-button,
    .next-button {
      justify-content: center;
    }

    .nav-card-name {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .card-detail-page {
      padding: var(--space-sm);
      padding-top: calc(var(--space-md) + 60px);
    }

    .breadcrumb {
      margin-bottom: var(--space-md);
    }

    .card-image-section {
      max-width: 250px;
    }

    .card-title-large {
      font-size: var(--text-xl);
    }

    .text-section {
      padding: var(--space-md);
    }
  }

  @media (max-width: 375px) {
    .breadcrumb-current {
      font-size: var(--text-xs);
    }

    .card-image-section {
      max-width: 100%;
    }
  }
</style>
</BaseLayout>
