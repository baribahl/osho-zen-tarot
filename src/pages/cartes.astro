---
import BaseLayout from '../layouts/BaseLayout.astro';
import cardsData from '../data/osho_cards.json';

// Tous les types de familles pour les filtres
const families = ['Toutes', 'Majeures', 'Feu', 'Eau', 'Nuages', 'Arc-en-ciel'];
---

<BaseLayout title="Parcourir les cartes - BaribOsho v1">
  <div class="gallery-page">
    <div class="gallery-header">
      <h1 class="page-title">Parcourir les cartes</h1>
      <p class="page-subtitle">
        Explorez les 79 cartes du Tarot Zen d'Osho et découvrez leurs significations profondes
      </p>
    </div>

    <div class="gallery-container">
      <!-- Filtres sidebar -->
      <aside class="filters-sidebar" role="complementary" aria-label="Filtres de recherche">
        <div class="filter-section">
          <h3 class="filter-title">
            <span class="material-symbols-outlined" aria-hidden="true">filter_list</span>
            Filtres
          </h3>
          
          <div class="filter-group">
            <h4 class="filter-group-title">Type d'arcane</h4>
            <div class="filter-chips" id="familyFilters">
              {families.map((family) => (
                <button 
                  class={`filter-chip ${family === 'Toutes' ? 'active' : ''}`}
                  data-family={family}
                  type="button"
                  role="radio"
                  aria-checked={family === 'Toutes' ? 'true' : 'false'}
                >
                  {family}
                </button>
              ))}
            </div>
          </div>

          <div class="filter-group">
            <h4 class="filter-group-title">
              <span class="material-symbols-outlined">search</span>
              Recherche
            </h4>
            <input 
              type="text" 
              id="searchInput"
              class="search-input" 
              placeholder="Nom de la carte..."
              aria-label="Rechercher une carte par son nom"
            />
          </div>

          <button class="reset-button" id="resetFilters" aria-label="Réinitialiser tous les filtres">
            <span class="material-symbols-outlined" aria-hidden="true">refresh</span>
            Réinitialiser
          </button>
        </div>
      </aside>

      <!-- Grille de cartes -->
      <section class="cards-grid" id="cardsGrid" aria-label="Galerie des cartes de tarot">
        {cardsData.map((card) => (
          <a 
            href={`/carte/${card.card_number}`} 
            class="card-item"
            data-card-family={card.arcana_family || 'Majeures'}
            data-card-name={card.name.toLowerCase()}
            data-card-number={card.card_number}
          >
            <div class="card-image-container">
              <div class="image-skeleton"></div>
              <img 
                src={card.image_url_thumb || card.image_url_online} 
                alt={card.name}
                class="card-thumbnail"
                loading="lazy"
                width="300"
                height="450"
                onload="this.classList.add('loaded'); this.previousElementSibling.style.display='none';"
              />
            </div>
            <div class="card-details">
              <h3 class="card-title">{card.name}</h3>
              <p class="card-arcana">{card.arcana}</p>
            </div>
          </a>
        ))}
      </section>
    </div>
  </div>
</BaseLayout>

<style>
  .gallery-page {
    min-height: 100vh;
    padding: var(--space-2xl) var(--space-xl);
  }

  .gallery-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
    padding-top: 0;
    will-change: transform;
    transition: transform 0.1s ease-out;
  }

  .page-title {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    font-weight: 900;
    background: var(--gradient-accent);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--space-md);
  }

  .page-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  .gallery-container {
    max-width: var(--breakpoint-xl);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 260px 1fr;
    gap: var(--space-2xl);
  }

  /* === Sidebar Filtres === */
  .filters-sidebar {
    position: sticky;
    top: calc(var(--space-3xl) + 60px);
    height: fit-content;
    background: linear-gradient(
      135deg, 
      rgba(78, 205, 196, 0.04) 0%, 
      rgba(15, 23, 37, 0.5) 50%,
      rgba(255, 140, 66, 0.04) 100%
    );
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 20px;
    padding: var(--space-xl);
    backdrop-filter: blur(16px);
    z-index: 10;
    box-shadow: 
      0 4px 20px rgba(0, 0, 0, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 0.05);
  }

  .filter-title {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-family: var(--font-heading);
    font-size: var(--text-xl);
    color: var(--color-accent-turquoise);
    margin-bottom: var(--space-lg);
  }

  .filter-title .material-symbols-outlined {
    font-size: var(--text-2xl);
  }

  .filter-group {
    margin-bottom: var(--space-xl);
  }

  .filter-group-title {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: var(--space-md);
    font-weight: 600;
  }

  .filter-group-title .material-symbols-outlined {
    font-size: var(--text-base);
  }

  .filter-chips {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .filter-chip {
    padding: var(--space-sm) var(--space-md);
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 100px;
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    cursor: pointer;
    transition: all var(--transition-normal);
    font-family: var(--font-body);
  }

  .filter-chip:hover {
    background: rgba(255, 140, 66, 0.1);
    border-color: var(--color-accent-orange);
    color: var(--color-accent-orange);
    transform: translateY(-1px);
  }

  .filter-chip.active {
    background: linear-gradient(135deg, var(--color-accent-orange), var(--color-accent-magenta));
    border-color: transparent;
    color: white;
    font-weight: 600;
    box-shadow: 0 4px 12px rgba(238, 90, 111, 0.3);
  }

  .search-input {
    width: 100%;
    padding: var(--space-md);
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    color: var(--color-text-primary);
    font-family: var(--font-body);
    font-size: var(--text-base);
    transition: all var(--transition-normal);
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-accent-turquoise);
    background: rgba(0, 0, 0, 0.4);
    box-shadow: 0 0 0 3px rgba(78, 205, 196, 0.1);
  }

  .search-input::placeholder {
    color: var(--color-text-muted);
  }

  .reset-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    width: 100%;
    padding: var(--space-md);
    background: transparent;
    border: 1px dashed rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    color: var(--color-text-secondary);
    font-family: var(--font-heading);
    font-size: var(--text-sm);
    cursor: pointer;
    transition: all var(--transition-normal);
  }

  .reset-button:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: var(--color-text-primary);
    color: var(--color-text-primary);
  }

  .reset-button .material-symbols-outlined {
    font-size: var(--text-lg);
  }

  /* === Grille de cartes === */
  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: var(--space-lg);
  }

  .card-item {
    display: flex;
    flex-direction: column;
    background: rgba(30, 30, 50, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 16px;
    overflow: hidden;
    text-decoration: none;
    transition: all var(--transition-normal);
    cursor: pointer;
    position: relative;
  }

  /* Subtle glow aura on hover - colored by family */
  .card-item::before {
    content: '';
    position: absolute;
    inset: -2px;
    border-radius: 18px;
    background: var(--card-glow, rgba(78, 205, 196, 0.3));
    opacity: 0;
    transition: opacity var(--transition-normal);
    z-index: -1;
    filter: blur(8px);
  }

  .card-item:hover::before {
    opacity: 1;
  }

  /* Family-specific glow colors */
  .card-item[data-card-family="Majeures"] { --card-glow: rgba(255, 215, 0, 0.4); }
  .card-item[data-card-family="Feu"] { --card-glow: rgba(255, 100, 50, 0.4); }
  .card-item[data-card-family="Eau"] { --card-glow: rgba(78, 205, 196, 0.4); }
  .card-item[data-card-family="Nuages"] { --card-glow: rgba(180, 160, 220, 0.4); }
  .card-item[data-card-family="Arc-en-ciel"] { --card-glow: linear-gradient(135deg, rgba(255, 100, 100, 0.3), rgba(255, 200, 100, 0.3), rgba(100, 255, 150, 0.3), rgba(100, 200, 255, 0.3), rgba(200, 100, 255, 0.3)); }

  .card-item:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    border-color: rgba(255, 255, 255, 0.15);
    z-index: 2;
  }

  .card-image-container {
    position: relative;
    width: 100%;
    aspect-ratio: 2/3;
    overflow: hidden;
    background: #1a1a2e;
  }

  .image-skeleton {
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, #1a1a2e 25%, #2a2a4e 50%, #1a1a2e 75%);
    background-size: 200% 100%;
    animation: skeletonLoading 1.5s infinite;
    z-index: 1;
  }

  @keyframes skeletonLoading {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }

  .card-thumbnail {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.7s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.5s ease;
    opacity: 0;
  }

  .card-thumbnail.loaded {
    opacity: 1;
  }

  .card-item:hover .card-thumbnail {
    transform: scale(1.1);
  }

  .card-details {
    padding: var(--space-md);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    background: linear-gradient(to bottom, rgba(30, 30, 50, 0), rgba(30, 30, 50, 0.8));
  }

  .card-title {
    font-family: var(--font-card-name);
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0;
    transition: color var(--transition-fast);
  }
  
  .card-item:hover .card-title {
    color: var(--color-accent-turquoise);
  }

  .card-arcana {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 1px;
    margin: 0;
  }

  .card-item.hidden {
    display: none;
  }

  /* === Responsive === */
  @media (max-width: 1024px) {
    .gallery-container {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }

    .filters-sidebar {
      position: sticky;
      top: 60px; /* Sticky below header */
      margin-bottom: var(--space-xl);
      z-index: 90;
      background: rgba(15, 23, 37, 0.95);
    }
    
    .filter-chips {
      flex-wrap: nowrap;
      overflow-x: auto;
      padding-bottom: var(--space-xs);
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none; /* Hide scrollbar Firefox */
    }
    
    .filter-chips::-webkit-scrollbar {
      display: none; /* Hide scrollbar Chrome/Safari */
    }
    
    .filter-chip {
      white-space: nowrap;
      flex-shrink: 0;
    }
  }

  @media (max-width: 768px) {
    .gallery-page {
      padding: var(--space-xl) var(--space-md);
    }

    .gallery-header {
      padding-top: var(--space-md);
      margin-bottom: var(--space-xl);
    }

    .page-title {
      font-size: var(--text-3xl);
    }

    .page-subtitle {
      font-size: var(--text-base);
    }

    .gallery-container {
      gap: var(--space-lg);
    }

    .filters-sidebar {
      padding: var(--space-md);
      top: 56px;
    }

    .cards-grid {
      grid-template-columns: repeat(2, 1fr); /* Force 2 columns */
      gap: var(--space-md);
    }
    
    .card-details {
      padding: var(--space-sm);
    }
  }

  @media (max-width: 480px) {
    .page-title {
      font-size: var(--text-2xl);
    }

    .page-subtitle {
      font-size: var(--text-sm);
    }

    .cards-grid {
      gap: var(--space-sm);
    }

    .card-title {
      font-size: var(--text-base);
    }
    
    /* Ensure 2 columns even on small screens */
    .cards-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr)); 
    }
  }

  @media (max-width: 375px) {
    .gallery-page {
      padding: var(--space-lg) var(--space-sm);
    }

    .filter-title {
      font-size: var(--text-lg);
    }
  }

  .no-results {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space-3xl);
    color: var(--color-text-muted);
    text-align: center;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 16px;
    border: 1px dashed rgba(255, 255, 255, 0.1);
  }

  .no-results .material-symbols-outlined {
    font-size: var(--text-5xl);
    margin-bottom: var(--space-md);
    opacity: 0.5;
  }
</style>

<script>
  import Fuse from 'fuse.js';
  
  // Gestion des filtres
  const familyFilters = document.getElementById('familyFilters');
  const searchInput = document.getElementById('searchInput') as HTMLInputElement;
  const resetButton = document.getElementById('resetFilters');
  const cardItems = document.querySelectorAll('.card-item');

  // Récupérer les données des cartes depuis le DOM (attributs data) ou via un script global si nécessaire
  // Pour une meilleure performance avec Fuse, on va reconstruire un tableau d'objets à partir des éléments DOM
  // ou mieux, on peut passer les données JSON directement au script si on les a importées
  
  // Option 1: Reconstruire depuis le DOM (limité aux données exposées)
  // Option 2: Utiliser les données importées (nécessite que le script soit un module ou ait accès aux données)
  // Ici, comme on est dans un bloc <script> Astro qui est traité comme un module, on peut importer les données.
  import cardsData from '../data/osho_cards.json';

  let activeFamily = 'Toutes';
  let searchTerm = '';

  // Configuration Fuse.js
  const fuseOptions = {
    keys: [
      { name: 'name', weight: 0.7 },
      { name: 'arcana', weight: 0.3 },
      { name: 'main_text', weight: 0.2 },
      { name: 'commentary', weight: 0.1 }
    ],
    threshold: 0.4, // Sensibilité (0.0 = correspondance parfaite, 1.0 = tout correspond)
    ignoreLocation: true
  };

  const fuse = new Fuse(cardsData, fuseOptions);

  function filterCards() {
    // 1. Obtenir les résultats de recherche si un terme est présent
    let searchResults: Set<string> | null = null;
    
    if (searchTerm.length > 1) {
      const results = fuse.search(searchTerm);
      searchResults = new Set(results.map(r => r.item.card_number));
    }

    // 2. Appliquer les filtres
    cardItems.forEach((card) => {
      const cardElement = card as HTMLElement;
      const cardFamily = cardElement.dataset.cardFamily || 'Majeures';
      const cardNumber = cardElement.dataset.cardNumber || '';

      const familyMatch = activeFamily === 'Toutes' || cardFamily === activeFamily;
      
      // Si recherche active, on vérifie si la carte est dans les résultats
      // Sinon, on considère que c'est un match (pas de filtre de recherche)
      const searchMatch = searchResults === null || searchResults.has(cardNumber);

      if (familyMatch && searchMatch) {
        cardElement.classList.remove('hidden');
        // Animation d'entrée optionnelle
        cardElement.style.opacity = '1';
        cardElement.style.transform = 'translateY(0)';
      } else {
        cardElement.classList.add('hidden');
      }
    });
    
    // Afficher un message si aucun résultat ?
    const visibleCards = document.querySelectorAll('.card-item:not(.hidden)');
    const noResultsMsg = document.getElementById('noResultsMessage');
    
    if (visibleCards.length === 0) {
      if (!noResultsMsg) {
        const msg = document.createElement('div');
        msg.id = 'noResultsMessage';
        msg.className = 'no-results';
        msg.innerHTML = `
          <span class="material-symbols-outlined">search_off</span>
          <p>Aucune carte ne correspond à votre recherche.</p>
        `;
        document.getElementById('cardsGrid')?.appendChild(msg);
      }
    } else {
      noResultsMsg?.remove();
    }
  }

  // Filtres par famille
  if (familyFilters) {
    familyFilters.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (target.classList.contains('filter-chip')) {
        const family = target.dataset.family || 'Toutes';
        
        // Mettre à jour l'état actif
        familyFilters.querySelectorAll('.filter-chip').forEach((chip) => {
          chip.classList.remove('active');
          chip.setAttribute('aria-checked', 'false');
        });
        target.classList.add('active');
        target.setAttribute('aria-checked', 'true');
        
        activeFamily = family;
        filterCards();
      }
    });
  }

  // Recherche
  if (searchInput) {
    searchInput.addEventListener('input', (e) => {
      searchTerm = (e.target as HTMLInputElement).value;
      filterCards();
    });
  }

  // Réinitialiser
  if (resetButton) {
    resetButton.addEventListener('click', () => {
      activeFamily = 'Toutes';
      searchTerm = '';
      
      if (searchInput) {
        searchInput.value = '';
      }
      
      familyFilters?.querySelectorAll('.filter-chip').forEach((chip) => {
        chip.classList.remove('active');
        chip.setAttribute('aria-checked', 'false');
        if ((chip as HTMLElement).dataset.family === 'Toutes') {
          chip.classList.add('active');
          chip.setAttribute('aria-checked', 'true');
        }
      });
      
      filterCards();
    });
  }

  // Subtle parallax effect on header
  let ticking = false;
  const galleryHeader = document.querySelector('.gallery-header') as HTMLElement;

  function updateParallax() {
    const scrolled = window.pageYOffset;
    
    if (galleryHeader && scrolled < 500) {
      galleryHeader.style.transform = `translateY(${scrolled * 0.3}px)`;
      galleryHeader.style.opacity = `${Math.max(0.3, 1 - scrolled / 400)}`;
    }
    
    ticking = false;
  }

  function requestParallaxUpdate() {
    if (!ticking && window.matchMedia('(prefers-reduced-motion: no-preference)').matches) {
      window.requestAnimationFrame(updateParallax);
      ticking = true;
    }
  }

  window.addEventListener('scroll', requestParallaxUpdate);
</script>
</BaseLayout>
